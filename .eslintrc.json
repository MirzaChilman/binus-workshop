{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "jsx-a11y/no-redundant-roles": [
            "off",
            {
              "nav": ["navigation"]
            }
          ],
        "react/prop-types": 0
    },
    "settings": {
        "import/resolver": {
        "alias": {
            "map": [
                ["@components", "./src/components"],
                ["@routes", "./src/routes"],
                ["@utils", "./src/utils"],
                ["@hooks", "./src/hooks"]
            ],
            "extensions": [".js",".jsx"]
        }
        }
    }
}
